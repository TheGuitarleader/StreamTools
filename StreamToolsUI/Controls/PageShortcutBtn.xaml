<UserControl x:Name="userControl" x:Class="StreamToolsUI.Controls.PageShortcutBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StreamToolsUI.Controls"
             mc:Ignorable="d" 
             MinWidth="50" MinHeight="80" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Button x:Name="PageBtn" Background="{x:Null}">
        <Button.Content>
            <StackPanel>
                <Border Grid.Row="0" Background="Blue" CornerRadius="5" Margin="5" Width="75" Height="75"/>
                <Label Content="{Binding ShortcutName, ElementName=userControl}" Grid.Row="1" Width="NaN" Foreground="{StaticResource TextBrush}" FontSize="11" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button.Content>
    </Button>
</UserControl>
