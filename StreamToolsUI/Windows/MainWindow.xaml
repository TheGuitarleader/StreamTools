<Window x:Class="StreamToolsUI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamToolsUI"
        xmlns:Controls="clr-namespace:StreamToolsUI.Controls"
        mc:Ignorable="d"
        WindowState="Normal"
        UseLayoutRounding="True" 
        ResizeMode="CanResize"
        Title="MainWindow" 
        Width="800" 
        Height="450"
        Style="{DynamicResource PrimaryWindowStyle}" 
        Loaded="MainWindow_Loaded">

    <DockPanel x:Name="HomePage" Background="{StaticResource WindowBrush}">
        <UniformGrid Rows="2" Columns="4" Margin="10">
            <Controls:PageShortcutBtn ShortcutName="Count Down Timer" Click="CountDownTimer_Click"/>
            <Controls:PageShortcutBtn ShortcutName="Gameplay Sorting"/>
            <Controls:PageShortcutBtn ShortcutName="Music Player"/>
            <Controls:PageShortcutBtn ShortcutName="Stream Health"/>
            <Controls:PageShortcutBtn ShortcutName="Chatbot"/>
            <Controls:PageShortcutBtn ShortcutName=""/>
            <Controls:PageShortcutBtn ShortcutName=""/>
            <Controls:PageShortcutBtn ShortcutName=""/>
        </UniformGrid>
    </DockPanel>
</Window>
